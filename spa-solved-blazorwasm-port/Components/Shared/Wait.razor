<div class="wait">
    <Loader />

    @if (ChildContent != null)
    {
        @ChildContent
    }
    else
    {
        @Message
    }
</div>

@code {
    [Parameter]
    public string Message { get; set; } = "Loading...";
    
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
}